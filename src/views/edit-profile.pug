extends base

block content 
    if errorMessage 
        span=errorMessage 
    img(src="/" + loggedInUser.avatarUrl, width="300", height="50")
    form(method="POST", enctype="multipart/form-data")
        label(for="file") Avatar
        input(type="file", id="avatar", name="avatar", accept="image/*")
        input(placeholder="이름", name="name", type="text", required, value=loggedInUser.name)
        input(placeholder="이메일", name="email", type="email", required, value=loggedInUser.email)
        input(placeholder="아이디", name="username", type="text", required, value=loggedInUser.username)
        input(placeholder="사는 지역", name="location", type="text", required, value=loggedInUser.location)
        input(type="submit", value="Update Profile")
        if !loggedInUser.socialOnly
            hr
            a(href="change-password") Change Password &rarr;