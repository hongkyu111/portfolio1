extends base


block content
    if errorMessage 
        span=errorMessage 
    form(method="POST") 
        input(placeholder="아이디", name="username", type="text", required)
        input(placeholder="비밀번호", name="password", type="password", required)
        input(type="submit", value="join")
        br
        a(href="/user/github/start") Continue with Github
    hr
    div 
        span Don't have an account? 
        br
        a(href="/join") Create one now &rarr;
    