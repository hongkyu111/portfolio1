extends base


block content
    if errorMessage 
        span=errorMessage 
    form(method="POST") 
        input(placeholder="이름", name="name", type="text", required)
        input(placeholder="이메일", name="email", type="email", required)
        input(placeholder="아이디", name="username", type="text", required)
        input(placeholder="비밀번호", name="password", type="password", required)
        input(placeholder="비밀번호 확인", name="password_2", type="password", required)
        input(placeholder="사는 지역", name="location", type="text", required)
        input(type="submit", value="join")
    hr
    div 
        span Already have an account?
        a(href="/login") Log in now &rarr;
    