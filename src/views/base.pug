doctype html
html(lang="ko")
    head    
        title #{pageTitle} | #{siteName}
        link(rel="stylesheet" href="https://unpkg.com/mvp.css")
    body
        header 
            h1=pageTitle
            nav 
                ul 
                    li 
                       a(href="/") Home
                    if loggedIn 
                        li
                            a(href="/user/edit") 회원 정보 수정
                        li
                            a(href=`/user/${loggedInUser._id}`) 내 프로필
                        li 
                             a(href="/user/logout") Log Out
                        li 
                            a(href="/video/upload") 업로드 비디오
                    else
                        li 
                            a(href="/join") 회원가입  
                        li 
                            a(href="/login") Log in
                    li 
                        a(href="/search") 검색
        main
            block content
    include partials/footer